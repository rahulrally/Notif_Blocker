<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text_keywords"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="48dp"
        android:hint="Enter Keywords (comma separated)" />

    <Button
        android:id="@+id/button_toggle_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Service"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <Switch
        android:id="@+id/switch_service_enabled"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:text="Service Enabled" />
</LinearLayout>
